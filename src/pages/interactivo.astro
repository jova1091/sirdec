---
import BaseLayout from '../layouts/base.astro';
import Convenciones from '../components/Convenciones.astro';
import Variable from '../components/Variable.vue';
import SubModulo from '../components/SubModulo.vue';
import Modulo from '../components/Modulo.astro';

--- 
<BaseLayout>
  <div class="container columns-1 mx-auto text-center text-pretty">
    <p class="my-4">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Soluta obcaecati officiis similique ea odio cupiditate veniam, ratione mollitia atque qui vitae temporibus, exercitationem aut ex cumque fuga magni facere nam?</p>
  </div>
  <div class="block relative my-6">
    <div class="container columns-3 mx-auto grid grid-cols-3 gap-28 text-pretty">
      <Modulo client:visible/>
      <SubModulo client:load/>
      <Variable client:load/>
    </div>
  </div>
  <div class="container columns-1 mx-auto">
    <Convenciones />
  </div>
</BaseLayout>